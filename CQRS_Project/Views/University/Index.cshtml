@model List<GetAllUniversityQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class=" container">
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Üniversite</th>
            <th>Şehir</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UniversityID</td>
                <td>@item.Name</td>
                <td>@item.Town</td>
                <td><a href="/University/DeleteUniversity/@item.UniversityID" class="btn btn-danger">Sil</a></td>
                <td><a href="/University/UpdateUniversity/@item.UniversityID" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/University/AddUniversity" class="btn btn-info">Kaydet</a>
</div>