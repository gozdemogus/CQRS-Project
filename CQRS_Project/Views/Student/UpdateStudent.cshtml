@model GetStudentByIdQueryResult

@{
    ViewData["Title"] = "UpdateStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>UpdateStudent</h1>

<div class=" container">
    <form method="post">
        <br />
        <input type="hidden" asp-for="StudentID" />
        <br />
        <label>Öğrenci Adı </label>
        <input type="text" asp-for="Name" class="form-control" />
        <br />
        <label>Öğrenci Soyadı </label>
        <input type="text" asp-for="Surname" class="form-control" />
        <br />
        <label>Öğrenci Yaşı </label>
        <input type="text" asp-for="Age" class="form-control" />
        <br />
        <label>Öğrenci Şehir </label>
        <input type="text" asp-for="City" class="form-control" />
        <br />
        <button class="btn btn-success">Güncelle</button>
    </form>
</div>