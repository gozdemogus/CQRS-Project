@model CreateStudentCommand
@{
    ViewData["Title"] = "AddStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Öğrenci Ekleme Sayfası</h1>

<div class=" container">
    <form method="post">
        <br />
        <label>Öğrenci Adı </label>
        <input type="text" asp-for="Name" class="form-control" />
        <br />
        <label>Öğrenci Soyadı </label>
        <input type="text" asp-for="Surname" class="form-control" />
        <br />
        <label>Öğrenci Yaşı </label>
        <input type="text" asp-for="Age" class="form-control" />
        <br />
        <label>Öğrenci Şehir </label>
        <input type="text" asp-for="City" class="form-control" />
        <br />
        <button class="btn btn-primary">Kaydet</button>
    </form>
</div>